{
  "name": "rims-desktop",
  "version": "1.0.0",
  "description": "Aplikasi desktop untuk penyewaan dan penjualan baju/aksesoris rental.",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --kill-others \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development node scripts/run-electron.js\"",
    "start": "node scripts/run-electron.js --node-env=production",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "npx electron-rebuild -f -w sqlite3",
    "lint": "eslint . --ext .js,.vue",
    "format": "prettier --write \"src/**/*.{js,vue}\"",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:fresh": "node src/database/fresh.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "vite": "^5.0.0",
    "vue": "^3.3.8",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.3",
    "pdf-to-printer": "^5.6.1",
    "pinia": "^3.0.4",
    "@supabase/supabase-js": "^2.50.0",
    "sqlite3": "^5.0.2",
    "vue-router": "^4.6.3",
    "winston": "^3.18.3"
  },
  "build": {
    "appId": "com.rims.desktop",
    "productName": "RIMS Desktop",
    "directories": {
      "output": "dist/electron",
      "buildResources": "public"
    },
    "files": [
      "dist/renderer/**/*",
      "src/main/**/*",
      "src/shared/**/*",
      "src/database/**/*",
      "scripts/run-electron.js",
      "package.json"
    ],
    "extraResources": [
      ".env.production"
    ],
    "extraMetadata": {
      "main": "src/main/index.js"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
